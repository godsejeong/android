<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LecuturePagerActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pagerMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="강의정보"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/lecuturePagerFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강의 수정"
            app:layout_constraintRight_toLeftOf="@+id/lecuturePagerRemove"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/lecuturePagerRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="강의 삭제"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/lecuturePagerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강의정보표시"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/lecuturepagerLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pagerMainLayout"
        app:layout_constraintVertical_chainStyle="spread" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/lecuturepagerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/lecuturePagerRecycler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecuturePagerInfo">

        <Button
            android:id="@+id/lecuturePagerStudentInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수강생 정보"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/lecuturePagerUpload"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/lecuturePagerUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동영상 업로드"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/lecuturePagerStudentInfo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lecuturePagerRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>